<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/tab_layout"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnScanBT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buttonOnClicked"
                    android:text="Scan Bluetooth"
                    android:textSize="@dimen/option_text_size"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@color/horizontal_line" />

                <LinearLayout
                    android:id="@+id/layoutStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textSize="@dimen/option_title_size" />

                    <Switch
                        android:id="@+id/switchHudConnected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:clickable="false"
                        android:text="HUD Connected"

                        android:textSize="@dimen/option_text_size" />

                    <Switch
                        android:id="@+id/switchNotificationCatched"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:paddingTop="@dimen/option_padding_top"
                        android:text="Notification Capture"
                        android:textSize="@dimen/option_text_size" />

                    <Switch
                        android:id="@+id/switchGmapsNotificationCatched"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:clickable="false"
                        android:paddingTop="@dimen/option_padding_top"
                        android:text="Gmap's Notification Capture"
                        android:textSize="@dimen/option_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@color/horizontal_line" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/option_padding_top"
                    android:text="Setting"
                    android:textSize="@dimen/option_title_size" />

                <Switch
                    android:id="@+id/switchShowSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buttonOnClicked"

                    android:text="Show Speed"
                    android:textSize="@dimen/option_text_size" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/option_title_size"
                    android:paddingTop="@dimen/option_padding_top"
                    android:text="When Navigating"
                    />

                <Switch
                    android:id="@+id/switchNavShowSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buttonOnClicked"

                    android:text="Show Speed"
                    android:textSize="@dimen/option_text_size"
                    android:visibility="gone" />

                <Switch
                    android:id="@+id/switchShowETA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buttonOnClicked"
                    android:paddingTop="@dimen/option_padding_top"
                    android:textSize="@dimen/option_text_size"
                    android:text="Show ETA" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/option_title_size"
                    android:text="When Navigation Done"
                    android:paddingTop="@dimen/option_padding_top"
                    />

                <Switch
                    android:id="@+id/switchIdleShowSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="buttonOnClicked"
                    android:text="Show Speed"
                    android:textSize="@dimen/option_text_size"
                    android:visibility="gone" />

                <Switch
                    android:id="@+id/switchIdleShowTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/option_padding_top"
                    android:textSize="@dimen/option_text_size"
                    android:onClick="buttonOnClicked"
                    android:text="Show Current Time" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@color/horizontal_line" />

            </LinearLayout>

    </ScrollView>

</FrameLayout>
